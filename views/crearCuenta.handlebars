<main class="contenedor">
    <form action="/crearCuenta" method="post" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label for="imagen">Selecciona una imagen de perfil</label>
            <input type="file" name="imagen">
        </div>
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" placeholder="Ingresa tu nombre">
        </div>
        <div class="campo">
            <label for="apellido">Apellido</label>
            <input type="text" name="apellido" placeholder="Ingresa tu apellido">
        </div>
        <div class="campo">
            <label for="email">Correo electrónico</label>
            <input type="email" name="email" placeholder="nombre@dominio">
        </div>
        <div class="campo">
            <label for="telefono">Teléfono</label>
            <input type="number" name="telefono" placeholder="Ingresa tu teléfono">
        </div>
        <div class="campo">
            <label for="password">Contraseña</label>
            <input type="password" name="password" placeholder="Ingresa una contraseña segura">
        </div>
        <div class="campo">
            <label for="confirmpassword">Repetir la contraseña</label>
            <input type="password" name="confirmpassword" placeholder="Vuelve a introducir tu contraseña">
        </div>
        <input type="submit" value="Crear cuenta" class="btn-form">
        <button class="retorno"><a href="/iniciarSesion">Regresar</a></button>
    </form>
</main>